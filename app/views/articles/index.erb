<h1 class="text-center text-light mt-5 mb-5">Articles</h1>

  <% @articles.each do |article| %>
    <div class="row justify-content-center border-top pt-3 mx-5">
      <div class="col-12 col-lg-3 pb-5 px-0">
        <img class="img-fluid d-block mx-auto" src=<%= "https://robohash.org/#{article.id}?set=set2" %> />
      </div>
      <div class="col-0 col-lg-1"></div>
      <div class="col-12 col-lg-6 pb-5 px-0">
        <div class="text-center mb-3">
          <a href=<%= "/article/#{article.id}"%>><%= article.title %></a>
        </div>
        <p class="text-justify"><%= article.content %></p>
      </div>
    </div>
  <% end %>




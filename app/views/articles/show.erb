<h1 class="text-center mb-5 mt-5"><%= @article.title %></h1>

<div class="row justify-content-center mb-5">
  <div class="col-10 col-sm-5 col-md-4 col-lg-3 text-center">
    <img src=<%= "https://robohash.org/#{@article.id}?set=set2" %> alt="picture">
  </div>
</div>

<div class="row justify-content-center mb-5">
  <div class="col-10">
    <%= @article.content %>
  </div>
</div>

<h2 class="text-center mb-5">Comments</h2>

<div class="row justify-content-center mb-3">
  <% @article.comments.each do |comment| %>
    <div class="col-10 text-left pt-3 pb-3 border-top">
      <span style="color: #23a81c">Anonyme: </span> <%= comment.content %>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mb-5">
  <a href="/articles">Back to Articles</a>
</div>

